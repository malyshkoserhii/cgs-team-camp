{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": ".",
		"module": "ES2022",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"composite": true,
		"types": [
			"vite/client"
		],
		"paths": {
			"~assets/*": [
				"src/assets/*"
			],
			"~modules/*": [
				"src/modules/*"
			],
			"~router/*": [
				"src/router/*"
			],
			"~shared/*": [
				"src/shared/*"
			],
			"~store/*": [
				"src/store/*"
			],
			"~typings/*": [
				"src/typings/*"
			],
			"~/*": [
				"src/*"
			],
			"~services/*": [
				"src/services/*"
			],
			"~api/*": [
				"src/api/*"
			],
			"~utils/*": [
				"src/utils/*"
			],
			"~views/*": [
				"src/views/*"
			],
			"~dashboard/*": [
				"src/views/dashboard/*"
			],
			"~layout/*": [
				"src/shared/layout/*"
			],
			"~hooks/*": [
				"src/api/hooks/*"
			],
			"~providers/*": [
				"src/providers/*"
			],
			"~forms/*": [
				"src/shared/forms/*"
			],
			"~todo/*": [
				"src/views/todo/*"
			],
			"~modals/*": [
				"src/shared/modals/*"
			]
		}
	},
	"include": [
		"./src/**/*",
		"./vite.config.ts",
		".eslintrc.cjs"
	],
	"exclude": [
		"./node_modules",
		"test",
		"./dist",
		"**/*spec.ts"
	]
}